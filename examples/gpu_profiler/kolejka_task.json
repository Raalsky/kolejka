{
  "id": "gpus",
  "image":  "nvcr.io/nvidia/pytorch:21.07-py3",
  "requires": ["gpus:1"],
  "files": {
    "sample.py" : {
        "path" : "sample.py"
    }
  },
  "args": [
      "/opt/conda/bin/python",
      "sample.py"
  ],
  "limits": {
    "gpus": 1,
    "gpu_memory": "8G",
    "cpus": 2,
    "pids": 64,
    "memory": "8G",
    "storage": "1G",
    "image": "25G",
    "workspace": "1G",
    "time": 3000
  },
  "profilers": {
    "gpu": {
      "metrics": [
        "gpu_duration_time"
      ],
      "repeat": 1
    }
  },
  "stderr": "stderr.txt",
  "stdout": "stdout.txt"
}
